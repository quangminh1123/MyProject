@page "/AddSize"
@using Admin.Services
@using Admin.Model
@inject SizeResponse size
@inject NavigationManager Navigation

<h3>Thêm kích cỡ sản phẩm mới</h3>

<EditForm Model="@newSize" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="mb-3">
        <label for="name" class="form-label">Kích cỡ sản phẩm</label>
        <InputText class="form-control" id="name" @bind-Value="newSize.SizeName" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Thêm</button>
        <button type="button" class="btn btn-primary" @onclick="NavigateToCategoryPage">Quay về danh sách</button>
    </div>

</EditForm>
@code {
    private Sizes newSize = new Sizes();

    private async Task HandleValidSubmit()
    {
        await Task.Run(() => size.AddSize(newSize));
        Navigation.NavigateTo("/SizePage");
    }

    private void NavigateToCategoryPage()
    {
        Navigation.NavigateTo("/SizePage");
    }
}

