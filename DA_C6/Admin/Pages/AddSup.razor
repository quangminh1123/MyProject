@page "/AddSup"
@using Admin.Services
@using Admin.Model
@inject SupplierResponse sup
@inject NavigationManager Navigation

<h3>Thêm nhà cung ứng mới</h3>

<EditForm Model="@newSup" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="mb-3">
        <label for="name" class="form-label">Tên nhà cung ứng: </label>
        <InputText class="form-control" id="name" @bind-Value="newSup.Name" />
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email: </label>
        <InputText class="form-control" id="email" @bind-Value="newSup.Email" />
    </div>
    <div class="mb-3">
        <label for="phone" class="form-label">SĐT: </label>
        <InputText class="form-control" id="phone" @bind-Value="newSup.Phone" />
    </div>
    <div class="mb-3">
        <label for="addr" class="form-label">Địa chỉ: </label>
        <InputText class="form-control" id="addr" @bind-Value="newSup.Address" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Thêm</button>
        <button type="button" class="btn btn-primary" @onclick="NavigateToSupPage">Quay về danh sách</button>
    </div>

</EditForm>
@code {
    private Supplier newSup = new Supplier();

    private async Task HandleValidSubmit()
    {
        await sup.AddSupplierAsync(newSup);
        Navigation.NavigateTo("/SupplierPage");
    }

    private void NavigateToSupPage()
    {
        Navigation.NavigateTo("/SupplierPage");
    }
}


